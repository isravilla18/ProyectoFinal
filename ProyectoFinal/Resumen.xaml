<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.Resumen">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="30" Spacing="40">
            <BoxView HeightRequest="10"/>
            <Frame BackgroundColor="Yellow" HasShadow="False" >

                <Grid>
                                     
                    <Label x:Name="lblUsuario1" Grid.Row="0" Grid.Column="0" TextColor="Blue"/>
                   
                    <Label x:Name="lblnombre" Grid.Row="1" Grid.Column="0"/>
                    
                    <Label x:Name="lblpagar" Grid.Row="2" Grid.Column="0"/>
                </Grid>
            </Frame>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>